<navBar 
  title='个人资料'  
  background='#7dc5eb' 
  back="{{true}}"  
  home="{{true}}" 
  bindback="handlerGobackClick" 
  bindhome="handlerGohomeClick"></navBar>
<view class="wrapper-detail">
  <view class="head">
    <open-data type="userAvatarUrl" class="head-img"></open-data>
  </view>
  <block wx:for="{{cells}}" wx:key="id" >
    <s-cell wx:if="{{item.canShow}}" bind:onChange="onInputChange" bind:onCellClick="onCellClick" inputInfo="{{item}}">
      <view wx:if="{{item.isSlot}}">
        <picker 
          mode="selector" 
          disabled="{{item.readonly}}"
          bindchange="sexPickerChange" 
          value="{{sexIndex}}" range="{{sexs}}">{{sexs[sexIndex]}}</picker>
      </view>
    </s-cell>
  </block>
  <button bindtap="addUser" wx:if="{{userPkid === 0}}" class="savebtn">保存并使用</button>
</view>

